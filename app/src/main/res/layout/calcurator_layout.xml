<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <!-- 최상단 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F9DD5"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="7"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="8"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="9"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="X"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="4"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="5"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="6"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="-"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="1"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="2"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="3"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="+"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27B366"
            android:layout_weight="1"
            android:text="0"
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="."
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A84444"
            android:layout_weight="1"
            android:text="="
            android:textSize="45dp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>